@{
	Layout = null;
}
<html>
<head>
	<title>
		Home Page
	</title>

	<link rel="stylesheet" href="~/css/IndexPageStyle.css">
	@*For inter font*@
	@*--------------------------------------------------------------------------------*@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Pacifico&family=Spline+Sans:wght@300..700&display=swap" rel="stylesheet">
	@*--------------------------------------------------------------------------------*@
	<style>
		body {
			font-family: 'Inter', sans-serif;
		}

		.all {
			background: url(Images/maincenter2.jpeg);
			background-size: 100% 100%; /* Scale the image to cover the entire container */
			width: 100%;
			min-height: 100vh;
			color: white;
		}

			.all .content {
				margin-top: 100px;
				/* background-color: red; */
				height: 500px;
				justify-content: center
			}

				.all .content .info {
					width: 650px;
					/* height: 215px; */
					/* background-color: black; */
					/* margin-top: 100px; */
					margin-left: 30px;
					margin-top: 80px
				}

					.all .content .info h2 {
						font-weight: 700;
						font-size: 65px;
						margin-bottom: 0px;
						letter-spacing: 12px;
					}

					.all .content .info p {
						font-weight: 600;
						font-size: 20px;
						margin-top: 0;
						/* position: relative;
								top: -150px; */
					}
		.btnplusp {
			position: relative;
			top: -200px;
			padding: 20px
		}

		.all .content .info .buttons {
			/* width: 45.3% */
			/* background-color: yellow; */
			width: 100%;
/* 			position: relative;
			top: -170px */
		}

		.all .content .info button {
			width: 45%;
			font-weight: 600;
			font-size: 23px;
			border-radius: 15px;
			transition: all 0.8s;
			border: white solid 2px;
			padding: 5px;
		}

			.all .content .info button:hover {
				background-color: #e5e5e5;
				transform: scale(1.03)
			}

		.content img {
			margin: 60px;
			margin-top: 200px;
			width: 500px !important;
			height: 300px !important;
			border-radius: 15px;
			opacity: 0.85;
		}

		.content .info {
			margin-top: 0px;
			font-size: 30px;
		}

		.logo {
			width: 400px;
			height: 300px;
			display: flex; /* لتوسيط المحتوى */
			align-items: center; /* توسيط عمودي */
			justify-content: center; /* توسيط أفقي */
			margin: auto;
			margin-bottom: 10px;
			padding: 5px;
			opacity: 1;
			background-color: none;
			margin-top: 0;
			margin-bottom: 0;
			padding-top: 0;
			position: relative;
			top: -260px;
			right: 250px
		}

			.logo .mylogo {
				width: 100% !important;
				height: 100% !important;
				margin: 0;
				/* margin-bottom: 15px !important; */
				/* object-fit: contain; /* يساعد لو الصورة شكلها غريب */ */
			}

				.logo .mylogo img {
					width: 100px !important;
					height: 50px !important;
				}

		@@media (max-width: 1280px) {
			.content img {
				width: 90% !important;
			}

			.all .content {
			
				position: relative;
				/* top: -100px */
			}
			.logo{
				right: 180px
			}
		}

		@@media (max-width: 1015px) {
			body {
				overflow-x: visible;
				/* height: 3000px; */
			}

			.all {
				background-attachment: fixed;
				min-height: 100vh
			}

				.all .content {
					display: flex;
					flex-direction: column-reverse;
					align-items: center;
					text-align: center;
					background-attachment: fixed;
					position: relative;
					top: -100px
				}

					.all .content .info {
						margin: auto;
						/* 				background-color:black;
																opacity: 0.8; */
						/* background-color: red; */
						margin-top: 0
					}

						.all .content .info h2 {
							font-size: 50px
						}

						.all .content .info p {
							font-size: 16px
						}

					.all .content .ph {
						margin: auto;
						margin-top: 40px;
						margin-bottom: 0;
						width: 80%
					}

					.all .content img {
						opacity: 0.8
					}

				.all .content {
					position: relative;
					/* top: -100px */

				}
				.btnplusp{
					top:-270px;
					left: 30px;
					/* background-color: red !important */
				}
			.logo {
				height: 220px;
				top: -520px;
				right: 300px;
			}
		}

		@@media (max-width: 899px) {
			.logo {
				
				right: 230px;
			}
		}
		@@media (max-width: 700px) {
			.all {
				overflow: visible
			}

			.content {
				flex-direction: column-reverse;
				text-align: center;
				align-items: center;
				padding: 20px;
				/* background-color: red; */
				margin-top: 0 !important;
				margin-bottom: 0 !important;
				position: relative;
				top: -100px
			}

			.info {
				margin: auto;
				width: 90% !important;
				/* background-color: red; */
				padding: 10px;
				margin-top: 0 !important
			}

				.info h2 {
					font-size: 30px !important;
				}

				.info p {
					font-size: 14px !important;
					padding: 0 10px;
				}

			.ph {
				margin-top: 0px;
				margin-bottom: 0;
				width: 90%;
				display: flex;
				justify-content: center;
			}

			.pic {
				width: 100% !important;
				height: auto !important;
				opacity: 0.85;
				border-radius: 15px;
			}

			.buttons {
				display: flex;
				flex-direction: column;
				gap: 0px;
				margin-top: 15px;
			}

				.buttons button {
					width: 100%;
					font-size: 18px;
					padding: 10px;
				}

			.btnplusp{
top: -150px;
left: 10px;
/* background-color: red !important */
			}
			.logo{
				height: 100px;
				width: 100px;
				/* background-color:red; */
				top: -440px;
				right: 240px
			}
		}

		@@media (max-width: 550px) {
			.logo {

				right: 200px
			}
		}

	</style>
</head>
<body>
	<div class="all">
		<div class="home" style=" align-content: center">
			@* 		<div class="ads">
			<h1>Welcome to our online store</h1>
			</div> *@
			<div class="content">

				<div class="info" style="">
					@* <h2>Raknatk</h2> *@
					<div class="logo">
						<img class="mylogo" src="~/Images/WhiteLogo-removebg-preview.png" alt="Alternate Text" />
					</div>
					<div class="btnplusp" style="background-color: rgba(1, 0, 0, 0.65); border-radius: 10px;">
						<div class="paragraph" style=" border-radius: 10px; padding: 10px;">
							<p style="margin-top:0; padding-top:0; ">
								Welcome to Rakntak, your trusted solution for hassle-free parking at Egypt's International Exhibition Center! Our mission is to streamline the parking experience for you in the area. With user-friendly booking, transparent pricing, and reliable service, Rakntak ensures that your parking needs are met efficiently and conveniently. when you're attending an event, we've got you covered with smart, tailored solutions designed for this vibrant hub of activity.
							</p>
						</div>
						<div class="buttons">
							<a asp-action="SignIn" asp-controller="User"><button style="cursor: pointer">Sign in</button></a>
							<a asp-action="SignUp" asp-controller="User"><button style="cursor: pointer">Sign up</button></a>
						</div>
					</div>
				</div>
				<div class="ph">
					<img class="pic" src="~/Images/Pcar.jpg" alt="468">
				</div>
			</div>
		</div>
	</div>
</body>
</html>