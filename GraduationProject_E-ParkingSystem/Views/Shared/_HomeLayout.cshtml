					<li class="nav-item">
						<a class="nav-link @(ViewData["ActivePage"]?.ToString() == "HomePage" ? "active" : "") navtext" aria-current="page" href="@Url.Action("HomePage", "User")">Home</a>
					</li>
					<li class="nav-item">
