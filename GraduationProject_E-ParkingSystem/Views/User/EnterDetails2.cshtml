<script>
	const durationRadios = document.querySelectorAll('.duration-options input[type="radio"]');
    durationRadios.forEach(function (radio) {
    radio.addEventListener('change', function () {
        document.getElementById('duration-error').textContent = "";
    });
});
    window.onload = function () {
        document.querySelector('form').reset();
    }
    const plateInput = document.getElementById('plate-number');
    let plateNumberValid = false;

    // عند تغيير النص في المدخل
    plateInput.addEventListener('input', async function () {
        let raw = plateInput.value.replace(/[^A-Z\u0621-\u064A0-9]/gi, '').toUpperCase();
        let letters = '';
        let numbers = '';

//         for (let i = 0; i < raw.length; i++) {
//     const char = raw[i];
//     if ((/[A-Z\u0621-\u064A]/.test(char)) && letters.length < 3) {
//         letters += char;
//     } else if (/[0-9]/.test(char) && numbers.length < 4) {
//         numbers += char;
//     }
// }

        // تقسيم النص إلى حروف وأرقام
        for (let i = 0; i < raw.length; i++) {
    const char = raw[i];
    if ((/[\u0621-\u064A]/.test(char)) && letters.length < 3) {
        letters += char;
    } else if (/[0-9]/.test(char) && numbers.length < 4) {

        numbers += char;
    }
}


        // تنسيق النص النهائي مع إضافة مسافة بين الحروف فقط في واجهة المستخدم
        const formatted = letters.split('').join(' ') + (letters && numbers ? ' | ' : '') + numbers;
        plateInput.value = formatted;

        // إزالة المسافات عند التحقق
        const plateRegex = /^[A-Z\u0621-\u064A]{2,3}\|?\d{3,4}$/i;
        // const plateRegex = /^[A-Z\u0621-\u064A]{2,3}\|?\d{4}$/i;
        const errorElement = document.getElementById('plate-number-error');

        // إذا كان التنسيق غير صحيح
        if (!plateRegex.test(letters + numbers)) {  // التحقق بدون المسافات
            errorElement.textContent = "Invalid format. Use 2-3 Arabic letters followed by 4 digits.";
            plateInput.classList.add('is-invalid');
            plateNumberValid = false;
        } else {
            errorElement.textContent = ''; // إذا التنسيق صحيح، نزيل الرسالة
            plateInput.classList.remove('is-invalid');
            plateNumberValid = true;
        }

        // إذا كان التنسيق صحيح، نتأكد من السيرفر
        if (plateRegex.test(letters + numbers)) {
            const response = await fetch('/User/CarPlateValidation?plateNumber=' + encodeURIComponent(formatted), {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (data.success === false) {
                errorElement.textContent = data.message;
                plateInput.classList.add('is-invalid');
                plateNumberValid = false;
            } else {
                errorElement.textContent = '';
                plateInput.classList.remove('is-invalid');
                plateNumberValid = true;
            }
        }
    });
    plateInput.addEventListener("keypress", function (event) {
    const char = event.key.toUpperCase();
    const currentValue = plateInput.value.replace(/[^A-Z\u0621-\u064A0-9]/gi, '').toUpperCase();

    let letters = '';
    let numbers = '';

    for (let i = 0; i < currentValue.length; i++) {
        const c = currentValue[i];
        if (/[\u0621-\u064A]/.test(c) && letters.length < 3) {
            letters += c;
        } else if (/[0-9]/.test(c) && numbers.length < 4) {
            numbers += c;
        }
    }

    // الآن نتحقق إذا الضغط الحالي هيتجاوز الحد
    if (/[\u0621-\u064A]/.test(char)) {
        if (letters.length >= 3) {
            event.preventDefault();
        }
    } else if (/[0-9]/.test(char)) {
        if (numbers.length >= 4) {
            event.preventDefault();
        }
    } else {
        // لو مش حرف عربي ولا رقم، نمنعه برضو
        event.preventDefault();
    }
});
document.querySelector('form').addEventListener('submit', function (event) {
    const plateNumber = plateInput.value.trim();
    const selectedDuration = document.querySelector('input[name="Duration"]:checked');
    const durationError = document.getElementById('duration-error');
    const plateError = document.getElementById('plate-number-error');

    let hasError = false;
    let focused = false;

    // التحقق من رقم اللوحة: فاضي
    if (plateNumber === '') {
        plateError.textContent = "Plate number cannot be empty.";
        plateInput.classList.add('is-invalid');
        if (!focused) {
            plateInput.focus();
            focused = true;
        }
        hasError = true;
    } else if (!plateNumberValid) {
        plateInput.classList.add('is-invalid');
        if (!focused) {
            plateInput.focus();
            focused = true;
        }
        hasError = true;
    } else {
        plateError.textContent = '';
        plateInput.classList.remove('is-invalid');
    }

    // التحقق من اختيار المدة
    if (!selectedDuration) {
        durationError.textContent = "Please select a duration.";
        hasError = true;
    } else {
        durationError.textContent = '';
    }

    if (hasError) {
        event.preventDefault();
    }
});

</script>


