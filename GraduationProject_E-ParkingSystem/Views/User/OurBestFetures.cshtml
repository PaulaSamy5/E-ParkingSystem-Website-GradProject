<style>
	/* body{
		padding: 40px 120px
	} */
	.MyFeaturesDivs {
		margin-top: 60px;
		padding: 10px;
		display: flex;
		justify-content: space-between;
	}

	.feature-card {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		background-color: #fff;
		border-radius: 10px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		width: 447px;
		height: 160px;
		transition: all 0.5s;
	}

		.feature-card:hover {
			box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
		}

	.feature-text {
		flex: 1;
		width: 100%;
		padding: 15px;
	}

		.feature-text h4 {
			margin: 0;
			font-size: 25px;
			font-weight: 600;
		}

		.feature-text p {
			margin-top: 6px;
			font-size: 18px;
			font-weight: 400;
			color: #333;
		}

	.feature-icon img {
		width: 80px;
		height: 50px;
		background-color: red;
	}

	.VeryBigfoooooter {
		width: 88%;
		height: 70px;
		margin: auto;
		border-radius: 15px;
		margin-top: 55px;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.25);
		transition: all 0.5s;
	}

		.VeryBigfoooooter:hover {
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
		}

		.VeryBigfoooooter p {
			margin: auto;
			font-weight: 600;
			font-size: 25px;
		}

	.modern-video-section {
		position: relative;
		width: 92%;
		margin: 60px auto 0;
		padding: 30px;
		/* background: linear-gradient(135deg, #f3f3f3, #ffffff); */
		background-color: white;
		border-radius: 20px;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		text-align: center;
		opacity: 0;
		transform: translateY(30px);
		transition: all 0.8s ease-in-out;
	}

		.modern-video-section:hover{
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
		}

		.modern-video-section::after {
			content: "";
			position: absolute;
			bottom: -10px;
			left: 0;
			width: 100%;
			height: 10px;
			/* background: url('your-image-path.jpg') no-repeat center center; */
			background-size: cover;
		}


		.modern-video-section.show {
			opacity: 1;
			transform: translateY(0);
		}


.modern-video-section h3 {
    font-size: 28px;
    margin-bottom: 25px;
    color: #2c3e50;
    font-weight: 700;
    display: flex;
    justify-content: left;
    align-items: center;
    gap: 10px;
}

.modern-video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
}

.modern-video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 16px;
}

/* Animations */
@@keyframes fadeIn {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}



	/* Responsive */
	

	/* من 1024 لـ 769px = عناصر جنب بعض لكن تصغير وعرض مرن */
	@@media (max-width: 1024px) and (min-width: 769px) {
		.MyFeaturesDivs {
			justify-content: center;
			gap: 50px;
		}

		.feature-card {
			width: 45%;
			height: auto;
		}

		.VeryBigfoooooter p {
			font-size: 20px;
		}
	}
	/* أقل من 768px = موبايل = عناصر تحت بعض */
	@@media (max-width: 768px) {
		.MyFeaturesDivs {
			flex-direction: column;
			align-items: center;
			gap: 20px;
			margin-top:30px
		}

		.feature-card {
			width: 90%;
			height: auto;
			flex-direction: column;
			align-items: center;
			text-align: center;
			padding: 15px;
		}

		.feature-icon img {
			width: 100px;
			height: 60px;
			margin-top: 10px;
		}

		.feature-text h4 {
			font-size: 22px;
		}

		.feature-text p {
			font-size: 16px;
		}

		.VeryBigfoooooter p {
			font-size: 18px;
			padding: 10px;
		}

		.modern-video-section h3 {
			font-size: 22px;
		}
	}

</style>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		const videoSection = document.querySelector('.modern-video-section');

		function onScroll() {
			const rect = videoSection.getBoundingClientRect(); //بتجيب الابعاد 
			if (rect.top <= window.innerHeight - 100) { // rect.top دى بتجيب المسافة بين العنصر لاول الصفحة
				videoSection.classList.add('show');
				window.removeEventListener('scroll', onScroll);
			}
		}

		window.addEventListener('scroll', onScroll);
		onScroll(); // لو العنصر ظاهر من الأول
	});
</script>